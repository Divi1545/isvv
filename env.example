# IslandLoaf Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION (Required)
# ============================================

# Supabase Connection Pooler URL (recommended for production)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
SUPABASE_DB_URL=postgresql://user:password@host.pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct PostgreSQL Connection URL (fallback)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://user:password@host.supabase.com:5432/postgres

# Database SSL Configuration (optional)
# Set to 'disable' for local development or if your database doesn't support SSL
# PGSSLMODE=disable
# DATABASE_SSL_REJECT_UNAUTHORIZED=false

# ============================================
# SESSION & SECURITY (Required)
# ============================================

# Session secret for encrypting session cookies
# Generate a secure random string (32+ characters)
# Example: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-very-secure-random-string-32plus-chars

# Admin password for admin@islandloaf.com
# Change this immediately for production!
ADMIN_PASSWORD=change-this-secure-admin-password

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment mode (development | production)
NODE_ENV=production

# Server port (default: 5000)
PORT=5000

# ============================================
# OPTIONAL SERVICES
# ============================================

# OpenAI API Key for AI-powered features
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-proj-...

# Stripe API Keys for payment processing (if using payments)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...

# Agent/Bot Features
# AGENT_RUNNER_ENABLED=false

# ============================================
# REPLIT DEPLOYMENT NOTES
# ============================================
# 
# For Replit deployment:
# 1. Go to Secrets (lock icon in sidebar)
# 2. Add each variable above individually
# 3. Required: SUPABASE_DB_URL, SESSION_SECRET, ADMIN_PASSWORD, NODE_ENV
# 4. Optional: OPENAI_API_KEY for AI features
# 
# DO NOT commit .env file to version control!
# ============================================

